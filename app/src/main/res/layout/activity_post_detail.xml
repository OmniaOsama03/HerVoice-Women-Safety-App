<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailActivity"
    android:padding="20dp"
    android:background="@drawable/postdetails">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#232142"
        android:textColor="#FFFFFF"
        android:onClick="goBack"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/postTitle"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButton"
        android:text="Post Title"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>



    <!-- Description -->
    <TextView
        android:id="@+id/postDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:text="Full description goes here..."
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/postDescription"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="12dp"/>

    <!-- Metadata Row -->
    <LinearLayout
        android:id="@+id/metadataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/divider">

        <TextView
            android:id="@+id/postCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#BDBABA"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"/>

        <TextView
            android:id="@+id/postArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="#BDBABA"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/postDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#BDBABA"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#BDBABA"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="#BDBABA"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

</RelativeLayout>