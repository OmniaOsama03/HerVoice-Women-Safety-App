<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/profilebg1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/profilebanner2"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/blue"
        android:text="Back"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:onClick="goBack"
        />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/account"/>

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/profilePicture"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>



    <!--    First Name-->
    <EditText
        android:id="@+id/firstNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="35dp"/>



    <TextView
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/profileName"
        android:layout_marginTop="71dp"/>


    <!--    Last Name-->
    <EditText
        android:id="@+id/lastNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:textSize="18dp"
        android:layout_below="@+id/separator2"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/separator2"
        android:layout_marginTop="67dp"/>



    <!--    Email-->
    <EditText
        android:id="@+id/emailET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="18dp"
        android:layout_below="@+id/separator3"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/separator4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/separator3"
        android:layout_marginTop="67dp"/>


    <!--    Password-->
    <EditText
        android:id="@+id/passwordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="18dp"
        android:layout_below="@+id/separator4"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/separator3.2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/separator4"
        android:layout_marginTop="67dp"/>


    <!--    Age-->
    <EditText
        android:id="@+id/ageET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:textSize="18dp"
        android:layout_below="@+id/separator4"
        android:layout_marginTop="98dp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/separator5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/separator4"
        android:layout_marginTop="134dp"/>


    <!--    City-->
    <EditText
        android:id="@+id/cityET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textSize="18dp"
        android:layout_below="@+id/separator5"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/separator6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"
        android:layout_below="@+id/separator5"
        android:layout_marginTop="66dp"/>


    <!-- Save Button -->
    <Button
        android:id="@+id/saveBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Save"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/separator6"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:onClick="saveData"
        />




</RelativeLayout>